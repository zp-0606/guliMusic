/* pages/video/video.wxss */
.videoContainer .header{
    display: flex;
    padding: 10rpx;
}
.videoContainer .header image{
    width: 60rpx;
    height: 60rpx;
}
.videoContainer .header .search{
    border: 1rpx solid #eee;
    flex: 1;
    margin: 0 10rpx;
    font-size: 26rpx;
    line-height: 60rpx;
    text-align: center;
    color: #d43c33;
}
/*导航栏*/
.navScroll{
    display: flex;
    white-space: nowrap;
}
.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.navItem .active{
    border-bottom: 1rpx solid #d43c33;
}